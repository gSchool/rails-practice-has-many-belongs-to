<div class="page-header">
  <h1>Toys!</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th> Toy Name </th>
      <th> Cat </th>
    </tr>
  </thead>
  <tbody>
    <% @toys.each do |toy| %>
      <tr>
        <td>
          <%= link_to toy.name, toy_path(toy) %>
        </td>
        <td>
          <em>
            <% if toy.cat_id != nil %>
              <%= link_to toy.cat.name, cat_path(toy.cat_id) %>
            <% else %>
            WOMP WOMP No Ower :(
            <% end %>
          </em>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
